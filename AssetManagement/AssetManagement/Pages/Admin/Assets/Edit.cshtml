@page
@model AssetManagement.Pages.Admin.Assets.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit asset</h1>

<h4>Asset</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Asset.Id" />
            <div class="form-group">
                <label asp-for="Asset.Category.CategoryName" class="control-label"></label>
                <select asp-for="Asset.Category.CategoryName" class="form-control" asp-items="ViewBag.CategoryName"></select>
                <span asp-validation-for="Asset.Category.CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Asset.AssetName" class="control-label"></label>
                <input asp-for="Asset.AssetName" class="form-control" />
                <span asp-validation-for="Asset.AssetName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Asset.Image" class="control-label"></label>
                <input asp-for="Asset.Image" class="form-control" />
                <span asp-validation-for="Asset.Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Asset.Specification" class="control-label"></label>
                <input asp-for="Asset.Specification" class="form-control" />
                <span asp-validation-for="Asset.Specification" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./List">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
